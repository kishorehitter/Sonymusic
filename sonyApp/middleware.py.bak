import requests
from django.utils import timezone
from social_django.models import UserSocialAuth

class SonySubscriptionMiddleware:
    def __init__(self, get_response):
        self.get_response = get_response

    def __call__(self, request):
        # Only check for logged-in users on protected pages
        if request.user.is_authenticated and not request.path.startswith('/admin'):
            social_user = UserSocialAuth.objects.filter(user=request.user, provider='google-oauth2').first()
            
            if social_user:
                # Check if we need to re-verify (every 24 hours)
                last_checked = request.session.get('youtube_sub_checked')
                
                if not last_checked or (timezone.now().timestamp() - last_checked) > 86400:
                    token = social_user.extra_data.get('access_token')
                    # Call YouTube API to check Sony Music India (Channel ID: UC56gTxNs4f9xZ7Pa2i5xNzg)
                    url = f"https://www.googleapis.com/apps/youtube/v3/subscriptions?part=snippet&forChannelId=UC56gTxNs4f9xZ7Pa2i5xNzg&mine=true"
                    headers = {"Authorization": f"Bearer {token}"}
                    
                    response = requests.get(url, headers=headers)
                    if response.status_code == 200 and response.json().get('items'):
                        request.session['is_sony_subscriber'] = True
                        request.session['youtube_sub_checked'] = timezone.now().timestamp()
                    else:
                        request.session['is_sony_subscriber'] = False
        
        return self.get_response(request)